
<h1><%=@the_user.username%></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @the_user.id %>
  </dd>
  <dt>
  Edit user
  </dt>
  <form action="/update_user/<%=@the_user.username%>" method="post">
<dd>
    <label for="browser_username">Username</label>
    <input id="browser_username" type="text" name="input_username" value="<%= @the_user.username %>">

  <button>
    Update user
  </button>
  </dd>
  </form>
</dl>

<h1>Own photos </h1>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>
  
  <%@all_photos.each do |photo|%>
    <tr>
      <td><img src="<%= photo.image %>" style="width:250px;"></td>
      <td><%=@the_user.username%> </td>
      <td><%=photo.caption%> </td>
      <td><%=photo.created_at%> </td>
      <td><a href="/photos/<%=photo.id%>">Show details</a> </td>
    </tr>
  <%end%>
</table>
